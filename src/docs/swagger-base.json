{
  "openapi": "3.0.0",
  "info": {
    "title": "Express Data Integration Service API",
    "description": "API documentation for the customer, order, and reporting endpoints of the data integration service.",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:8011",
      "description": "Local development server"
    },
    {
      "url": "http://localhost:8011",
      "description": "Docker development server"
    }
  ],
  "tags": [
    {
      "name": "Data Import",
      "description": "Endpoints for importing customer and order data from CSV files"
    },
    {
      "name": "Customer Reports",
      "description": "Endpoints for retrieving customer-specific information and summaries"
    },
    {
      "name": "Order Reports",
      "description": "Endpoints for retrieving order-related reports and analytics"
    }
  ],
  "paths": {
    "/upload/customers": {
      "post": {
        "summary": "Upload customers CSV file",
        "description": "Upload a CSV file containing customer data for bulk import",
        "tags": [
          "Data Import"
        ],
        "requestBody": {
          "required": true,
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "file": {
                    "type": "string",
                    "format": "binary",
                    "description": "CSV file containing customer records (customer_id, name, email, country, signup_date)"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Customers imported successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/CustomerUploadResponse"
                }
              }
            }
          },
          "400": {
            "description": "Invalid CSV format, data validation error, or duplicate IDs",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                },
                "examples": {
                  "duplicateIds": {
                    "summary": "Duplicate customer IDs",
                    "value": {
                      "success": false,
                      "message": "Duplicate customer IDs found. Each customer must have a unique customer_id. Please check your CSV file for duplicate entries or remove existing data first.",
                      "responseObject": {
                        "success": false,
                        "recordsImported": 0,
                        "message": "Duplicate customer IDs detected"
                      },
                      "statusCode": 400
                    }
                  },
                  "validationError": {
                    "summary": "CSV validation error",
                    "value": {
                      "success": false,
                      "message": "Validation errors: Row 2: Missing email, Row 3: Invalid date format",
                      "responseObject": {
                        "success": false,
                        "recordsImported": 0,
                        "message": "Validation failed"
                      },
                      "statusCode": 400
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/upload/orders": {
      "post": {
        "summary": "Upload orders CSV file",
        "description": "Upload a CSV file containing order data for bulk import",
        "tags": [
          "Data Import"
        ],
        "requestBody": {
          "required": true,
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "file": {
                    "type": "string",
                    "format": "binary",
                    "description": "CSV file containing order records (order_id, customer_id, product_name, amount, order_date, status)"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Orders imported successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/OrderUploadResponse"
                }
              }
            }
          },
          "400": {
            "description": "Invalid CSV format, data validation error, or duplicate IDs",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                },
                "examples": {
                  "duplicateIds": {
                    "summary": "Duplicate order IDs",
                    "value": {
                      "success": false,
                      "message": "Duplicate order IDs found. Each order must have a unique order_id. Please check your CSV file for duplicate entries or remove existing data first.",
                      "responseObject": {
                        "success": false,
                        "recordsImported": 0,
                        "message": "Duplicate order IDs detected"
                      },
                      "statusCode": 400
                    }
                  },
                  "validationError": {
                    "summary": "CSV validation error",
                    "value": {
                      "success": false,
                      "message": "Validation errors: Row 2: Missing amount, Row 3: Invalid date format",
                      "responseObject": {
                        "success": false,
                        "recordsImported": 0,
                        "message": "Validation failed"
                      },
                      "statusCode": 400
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/customers/{customerId}/summary": {
      "get": {
        "summary": "Get customer summary with orders",
        "description": "Retrieve detailed information about a specific customer including their order history",
        "tags": [
          "Customer Reports"
        ],
        "parameters": [
          {
            "in": "path",
            "name": "customerId",
            "required": true,
            "schema": {
              "type": "integer"
            },
            "description": "Customer ID"
          }
        ],
        "responses": {
          "200": {
            "description": "Customer summary retrieved successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/CustomerSummary"
                }
              }
            }
          },
          "404": {
            "description": "Customer not found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          },
          "400": {
            "description": "Invalid customer ID format",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/reports/customer-orders": {
      "get": {
        "summary": "Get customer orders report",
        "description": "Generate a report of all customers with their order statistics, optionally filtered by country or minimum spend",
        "tags": [
          "Order Reports"
        ],
        "parameters": [
          {
            "in": "query",
            "name": "country",
            "schema": {
              "type": "string"
            },
            "description": "Filter customers by country (optional)"
          },
          {
            "in": "query",
            "name": "minSpent",
            "schema": {
              "type": "number"
            },
            "description": "Filter customers who spent above this amount (optional)"
          }
        ],
        "responses": {
          "200": {
            "description": "Report generated successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/CustomerOrdersReport"
                }
              }
            }
          },
          "400": {
            "description": "Invalid query parameters",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "CustomerUploadResponse": {
        "type": "object",
        "properties": {
          "success": {
            "type": "boolean",
            "example": true
          },
          "message": {
            "type": "string",
            "example": "Customers imported successfully"
          },
          "responseObject": {
            "type": "object",
            "properties": {
              "recordsImported": {
                "type": "number",
                "example": 100
              }
            }
          },
          "statusCode": {
            "type": "number",
            "example": 201
          }
        }
      },
      "OrderUploadResponse": {
        "type": "object",
        "properties": {
          "success": {
            "type": "boolean",
            "example": true
          },
          "message": {
            "type": "string",
            "example": "Orders imported successfully"
          },
          "responseObject": {
            "type": "object",
            "properties": {
              "recordsImported": {
                "type": "number",
                "example": 250
              }
            }
          },
          "statusCode": {
            "type": "number",
            "example": 201
          }
        }
      },
      "CustomerSummary": {
        "type": "object",
        "properties": {
          "success": {
            "type": "boolean",
            "example": true
          },
          "message": {
            "type": "string",
            "example": "Customer found"
          },
          "responseObject": {
            "type": "object",
            "properties": {
              "customer": {
                "type": "object",
                "properties": {
                  "customer_id": {
                    "type": "number",
                    "example": 1
                  },
                  "name": {
                    "type": "string",
                    "example": "John Doe"
                  },
                  "email": {
                    "type": "string",
                    "example": "john@example.com"
                  },
                  "country": {
                    "type": "string",
                    "example": "USA"
                  },
                  "signup_date": {
                    "type": "string",
                    "format": "date",
                    "example": "2024-01-15"
                  }
                }
              },
              "orders": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "order_id": {
                      "type": "number",
                      "example": 101
                    },
                    "product_name": {
                      "type": "string",
                      "example": "Laptop"
                    },
                    "amount": {
                      "type": "number",
                      "example": 999.99
                    },
                    "order_date": {
                      "type": "string",
                      "format": "date",
                      "example": "2024-05-01"
                    },
                    "status": {
                      "type": "string",
                      "example": "completed"
                    }
                  }
                }
              },
              "totalSpent": {
                "type": "number",
                "example": 1599.98
              },
              "orderCount": {
                "type": "number",
                "example": 2
              }
            }
          },
          "statusCode": {
            "type": "number",
            "example": 200
          }
        }
      },
      "CustomerOrdersReport": {
        "type": "object",
        "properties": {
          "success": {
            "type": "boolean",
            "example": true
          },
          "message": {
            "type": "string",
            "example": "Customer orders report generated"
          },
          "responseObject": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "customer": {
                  "type": "object",
                  "properties": {
                    "customer_id": {
                      "type": "number",
                      "example": 1
                    },
                    "name": {
                      "type": "string",
                      "example": "John Doe"
                    },
                    "country": {
                      "type": "string",
                      "example": "USA"
                    }
                  }
                },
                "totalSpent": {
                  "type": "number",
                  "example": 1599.98
                },
                "orderCount": {
                  "type": "number",
                  "example": 2
                },
                "lastOrderDate": {
                  "type": "string",
                  "format": "date",
                  "example": "2024-05-15"
                }
              }
            }
          },
          "statusCode": {
            "type": "number",
            "example": 200
          }
        }
      },
      "Error": {
        "type": "object",
        "properties": {
          "success": {
            "type": "boolean",
            "example": false
          },
          "message": {
            "type": "string",
            "example": "Customer not found"
          },
          "responseObject": {
            "type": "null",
            "example": null
          },
          "statusCode": {
            "type": "number",
            "example": 404
          }
        }
      }
    }
  }
}