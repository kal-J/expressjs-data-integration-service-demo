# Environment Configuration Template
# Copy this file to .env and fill in your actual values

# Application Environment
NODE_ENV=development

# Server Configuration
HOST=localhost
PORT=8080

# CORS Configuration
CORS_ORIGIN=http://localhost:8080

# MongoDB Configuration
# Connection string for the main database
MONGODB_URI=mongodb://admin:password@localhost:27017/ecommerce-db?authSource=admin

# Connection string for the test database (used in tests)
MONGODB_URI_TEST=mongodb://admin:password@localhost:27017/test-db?authSource=admin

# MongoDB Authentication
MONGODB_USERNAME=admin
MONGODB_PASSWORD=password

# MongoDB Database Names
MONGODB_DATABASE=ecommerce-db
MONGODB_DATABASE_TEST=test-db

# Rate Limiting Configuration
COMMON_RATE_LIMIT_MAX_REQUESTS=1000
COMMON_RATE_LIMIT_WINDOW_MS=1000
